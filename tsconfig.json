    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true
  },
  "include": ["**/src/**/*.ts"]
}

